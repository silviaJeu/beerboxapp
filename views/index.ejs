<html>
	<head>
		<title>Fermentables</title>
		<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		<link href="/stylesheets/angularGrid.min.css" rel="stylesheet">
		<link href="/stylesheets/theme-fresh.min.css" rel="stylesheet">
		<link href="/stylesheets/style.css" rel="stylesheet">
		<script src="/bower_components/jquery/dist/jquery.min.js"></script>
		<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
		<script src="/javascripts/filters.js"></script>
		<script src="/javascripts/angularApp.js"></script>
		<script src="/javascripts/angularGrid.min.js"></script>
		<script src="/bower_components/angular-modal-service/dst/angular-modal-service.min.js"></script>		
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	</head>
	<body ng-app="beerboxApp">
		<div class="row">
			<div class="col-md-2">
			</div>
			<div class="col-md-8">
				<div class="page-header">
					<h2>Beer Box App</h2>
				</div>
					<ui-view></ui-view>				
				</div>
			<div class="col-md-2">
			</div>
		</div>
		<script type="text/ng-template" id="/home.html">
			<a href="#/recipe" class="btn btn-primary">Inserisci ricetta</a>
			<h3>Le tue ricette</h3>
		</script>
		<script type="text/ng-template" id="/recipe.html">
			<h3>Nuova ricetta </h3>
			<form>
				<div class="form-group">
					<input type="text" class="form-control" ng-model="recipeName" placeholder="Nome ricetta">
				</div>
				<a href="" ng-click="showComplex()">Aggiungi Fermentabili </a>
				<div class="table-responsive">
				<table ng-show="fermentablesList" class="ng-binding ng-hide table table-hover" cellpadding="0" cellspacing="0" id="fermentables">
					<thead>
						<tr>
							<th>Name</th>
							<th>Quantity</th>
							<th>%</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="item in fermentablesList">
							<td>{{item}}</td>
							<td></td>
							<td></td>
						</tr>	
					</tbody>
				</table>
				</div>					
			</form>
		</script>
		<script type="text/ng-template" id="/fermentables.html">
			<div class="modal fade">
				<div class="modal-dialog modal-lg">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" ng-click="close()" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title">{{title}}</h4>
						</div>
						<div class="modal-body">		
						<div class="container-fluid fermentables-page">
						<h4>Add fermentables</h4>			
						<form class="form-inline" ng-submit="addMalt()" style="margin-top:30px;">
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Name" ng-model="name"></input>
							</div>
							<div class="form-group">
								<select class="form-control" ng-model="type" ng-options="obj for obj in optionsType">
									<option value="">-- Type --</option>
								</select>
							</div>				
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Color" ng-model="srm"></input>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Potential SG" ng-model="pg"></input>
							</div>
							<div class="form-group">
								<select class="form-control" ng-model="mash" ng-options="obj.id as obj.name for obj in mashType">
									<option value="">-- Must Mash --</option>
								</select>
							</div>								
							<button type="submit" class="btn btn-primary">Add</button>
						</form>
						<div class="form-group form-group-sm col-sm-2">
						<input class="form-control" placeholder="Filter..." type="text" ng-model="query"/>
						</div>
						<br></br>
						<!--div angular-grid="gridOptions" class="ag-fresh"></div-->

						<div class="table-responsive">
							<table class="table table-hover table-bordered" cellpadding="0" cellspacing="0" id="fermentables">
								<thead>
									<tr>
										<th></th>
										<th>Name</th>
										<th>Type Malt</th>
										<th>Color (SRM)</th>
										<th>Potential SG</th>
										<th>Must Mash</th>
									</tr>
								</thead>
								<tbody>
									<tr ng-repeat="malt in malts | orderBy:'-type' | filter:query">
										<td><!--button type="button" ng-click="add(item)" class="btn btn-primary">Add</button-->
										<span ng-click="add(malt)" ng-class="{'glyphicon glyphicon-check' : itemselected.indexOf(malt.name) >= 0, 'glyphicon glyphicon-unchecked' : itemselected.indexOf(malt.name) < 0}" aria-hidden="true"></span>
										</td>	
										<td>{{malt.name}}</td>
										<td>{{malt.type}}</th>
										<td>{{malt.srm}}</td>
										<td>{{malt.pg}}</td>			
										<td>{{malt.mash | checkmark}}</td>						
									</tr>	
								</tbody>
							</table>			
						</div>
						</div>
						</div>
						<div class="modal-footer">
							<button type="button" ng-click="close()" class="btn btn-primary" data-dismiss="modal">OK</button>
							<button type="button" ng-click="cancel()" class="btn">Cancel</button>
						</div>
					</div>
				</div>
			</div>			
		</script>		
	</body>
</html>
